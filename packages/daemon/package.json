{
  "name": "@waiaas/daemon",
  "version": "2.3.0-rc.1",
  "description": "WAIaaS daemon - self-hosted wallet service for AI agents",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minhoyoo-iotrust/WAIaaS.git",
    "directory": "packages/daemon"
  },
  "homepage": "https://github.com/minhoyoo-iotrust/WAIaaS#readme",
  "bugs": {
    "url": "https://github.com/minhoyoo-iotrust/WAIaaS/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "prebuild": "mkdir -p public/admin && cp -r ../admin/dist/* public/admin/ 2>/dev/null || true",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:integration": "[ -d src/__tests__/integration ] && vitest run --dir src/__tests__/integration || true",
    "test:security": "[ -d src/__tests__/security ] && vitest run --dir src/__tests__/security || true",
    "test:chain": "[ -d src/__tests__/chain ] && vitest run --dir src/__tests__/chain || true",
    "test:platform": "[ -d src/__tests__/platform ] && vitest run --dir src/__tests__/platform || true",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^0.19.10",
    "@solana-program/token": "^0.10.0",
    "@solana/kit": "^6.0.1",
    "@waiaas/adapter-evm": "workspace:*",
    "@waiaas/adapter-solana": "workspace:*",
    "@waiaas/core": "workspace:*",
    "@walletconnect/sign-client": "^2.23.5",
    "argon2": "^0.44.0",
    "better-sqlite3": "^12.6.0",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "proper-lockfile": "^4.1.2",
    "qrcode": "^1.5.4",
    "semver": "^7.7.4",
    "smol-toml": "^1.3.0",
    "sodium-native": "^4.3.1",
    "uuidv7": "^1.0.2",
    "viem": "^2.21.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/qrcode": "^1.5.6",
    "@types/semver": "^7.7.1",
    "drizzle-kit": "^0.30.0",
    "msw": "^2.12.10"
  }
}
