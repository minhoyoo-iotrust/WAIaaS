{
  "name": "@waiaas/cli",
  "version": "2.4.0-rc.5",
  "description": "WAIaaS CLI - command-line interface for managing the wallet daemon",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minhoyoo-iotrust/WAIaaS.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/minhoyoo-iotrust/WAIaaS#readme",
  "bugs": {
    "url": "https://github.com/minhoyoo-iotrust/WAIaaS/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "bin": {
    "waiaas": "./bin/waiaas"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:integration": "[ -d src/__tests__/integration ] && vitest run --dir src/__tests__/integration || true",
    "test:security": "[ -d src/__tests__/security ] && vitest run --dir src/__tests__/security || true",
    "test:chain": "[ -d src/__tests__/chain ] && vitest run --dir src/__tests__/chain || true",
    "test:platform": "[ -d src/__tests__/platform ] && vitest run --dir src/__tests__/platform || true",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@waiaas/core": "workspace:*",
    "@waiaas/daemon": "workspace:*",
    "commander": "^13.0.0",
    "qrcode": "^1.5.4",
    "semver": "^7.7.4"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@types/qrcode": "^1.5.6",
    "@types/semver": "^7.7.1",
    "argon2": "^0.44.0"
  }
}
